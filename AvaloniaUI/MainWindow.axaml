<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
        x:Class="KeyCounter.MainWindow"
        Title="Mania Key Counter">
    <StackPanel>
		<Border Margin="10 10"
			CornerRadius="5"
			Background="Pink">
			<TextBlock Margin="5" 
				FontSize="20"
				HorizontalAlignment="Center"
				Foreground="Black"
				Text="Mania Key Counter">
			</TextBlock>
		</Border>

		<TextBlock Margin="10 5">Result:</TextBlock>
		<TextBox Margin="10 5"
			FontSize="16"
			IsReadOnly="true"
			AcceptsReturn="true"
			Height="200"
			Name="key_counter"
			Watermark="No result calculated"/>

		<Button Width="200"
			FontSize="16"
			Margin="10 5"
			Click="OpenFile">
			<TextBlock 
				HorizontalAlignment="Center"
				Text="Select osu!mania file"/>
		</Button>
	</StackPanel>

</Window>
